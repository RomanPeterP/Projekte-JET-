@using TRSAP09.Viewmodels
@model RestaurantListViewModel

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Restaurants</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			background-color: #eef2f3;
			padding: 2em;
		}

		h1 {
			text-align: center;
			color: #2c3e50;
			margin-bottom: 1.5em;
		}

		table {
			width: 100%;
			border-collapse: collapse;
			background-color: #fff;
			box-shadow: 0 2px 6px rgba(0,0,0,0.05);
			border-radius: 6px;
			overflow: hidden;
		}

		th, td {
			padding: 0.8em 1em;
			text-align: left;
			border-bottom: 1px solid #ddd;
		}

		th {
			background-color: #007b5e;
			color: white;
		}

		tr:hover {
			background-color: #f1f1f1;
		}
	</style>

</head>
<body>
	<h1>Restaurant-Liste</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Adresse</th>
				<th>Email</th>
				<th>Telefon</th>
				<th>Aktiv</th>
				<th></th> 
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.RestaurantsList)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.AddressSummary</td>
					<td>@item.Email</td>
					<td>@item.PhoneNumber</td>
					<td>@(item.Activ ? "Ja" : "Nein")</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.RestaurantId">Bearbeiten</a> |
						<a asp-action="Details" asp-route-id="@item.RestaurantId">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.RestaurantId">Löschen</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div>
		<br />
		<a asp-action="Register" asp-controller="Restaurant">Neues Restaurant erfassen</a>
	</div>
</body>
</html>
